---
import Layout from '../layouts/Layout.astro';
import skillsData from '../data/skills.json';
---

<Layout title="Skills | Stamatis Vretinaris">
	<section>
		<h1 class="text-3xl font-bold text-slate-100 mb-8 flex items-center gap-3">
			<span class="text-business-primary">#</span> Skills Matrix
		</h1>

		<div class="space-y-16">
			<!-- Scientific Domains -->
			<div class="animate-fade-in-up">
				<h2 class="text-xl font-bold text-slate-200 mb-6 border-b border-slate-800 pb-2 flex items-center gap-2">
					Scientific Domains
				</h2>
				<div class="grid md:grid-cols-2 gap-12">
					<div>
						<h3 class="font-bold text-slate-300 mb-4 text-lg">Numerical Methods</h3>
						<ul class="space-y-2">
							{skillsData.numerical_methods.map(skill => (
								<li class="flex items-start gap-3 text-slate-400 group">
									<span class="text-slate-600 mt-1.5 transition-colors group-hover:text-business-primary">•</span>
									<span class="leading-relaxed group-hover:text-slate-200 transition-colors">{skill}</span>
								</li>
							))}
						</ul>
					</div>
					<div>
						<h3 class="font-bold text-slate-300 mb-4 text-lg">Mathematics & Physics</h3>
						<ul class="space-y-2">
							{skillsData.mathematics.map(skill => (
								<li class="flex items-start gap-3 text-slate-400 group">
									<span class="text-slate-600 mt-1.5 transition-colors group-hover:text-business-primary">•</span>
									<span class="leading-relaxed group-hover:text-slate-200 transition-colors">{skill}</span>
								</li>
							))}
						</ul>
					</div>
				</div>
			</div>

			<!-- Engineering & HPC -->
			<div class="animate-fade-in-up" style="animation-delay: 100ms;">
				<h2 class="text-xl font-bold text-slate-200 mb-6 border-b border-slate-800 pb-2 flex items-center gap-2">
					Engineering & HPC
				</h2>
				<div class="grid md:grid-cols-2 gap-12">
					<div>
						<h3 class="font-bold text-slate-300 mb-4 text-lg">High-Performance Computing</h3>
						<ul class="space-y-2">
							{skillsData.hpc.map(skill => (
								<li class="flex items-start gap-3 text-slate-400 group">
									<span class="text-slate-600 mt-1.5 transition-colors group-hover:text-business-primary">•</span>
									<span class="leading-relaxed group-hover:text-slate-200 transition-colors">{skill}</span>
								</li>
							))}
						</ul>
					</div>
					<div>
						<h3 class="font-bold text-slate-300 mb-4 text-lg">Software Architecture</h3>
						<ul class="space-y-2">
							{skillsData.software.map(skill => (
								<li class="flex items-start gap-3 text-slate-400 group">
									<span class="text-slate-600 mt-1.5 transition-colors group-hover:text-business-primary">•</span>
									<span class="leading-relaxed group-hover:text-slate-200 transition-colors">{skill}</span>
								</li>
							))}
						</ul>
					</div>
				</div>
			</div>
			
			<!-- Tech Stack -->
			<div class="animate-fade-in-up" style="animation-delay: 200ms;">
				<h2 class="text-xl font-bold text-slate-200 mb-6 border-b border-slate-800 pb-2 flex items-center gap-2">
					Tech Stack
				</h2>
				<div class="flex flex-wrap gap-2 font-mono text-sm">
					{skillsData.languages.map(tech => (
						<span class="px-3 py-1 bg-slate-900 text-slate-300 rounded border border-slate-800 hover:border-business-primary/50 transition-colors cursor-default">
							{tech}
						</span>
					))}
				</div>
			</div>
		</div>
	</section>
</Layout>
